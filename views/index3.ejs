<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New User</title>
  <link rel="stylesheet" href="./styles/main.css">
  <link rel="stylesheet" href="./styles/new.css">
</head>

<body>
    <h2>My Favorite Books</h2>
    <h3>Sort the book entries by <a href="/rating">rating</a> or <a href="/alpha">alphabetically</a>.</h3>
     <a id = "newPost" href = "/add"><button>Add Book</button></a> 
    <div class="books">
        <ul id = "book-list">
            <% books.forEach(function(book) { %>
                <h3><%= book.title %></h3>
                <img 
                    src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg?default=false" 
                    alt="Cover for <%= book.title %>" 
                    style="width:150px;"/>
                <p><strong>Author:</strong> <%= book.author %></p>
                <p><strong>ISBN:</strong> <%= book.isbn %> </p>
                <p><strong>Review:</strong> <%= book.content%></p>
                <h4><strong>Rating: </strong><%= book.rating %></h4>

                <a class="edit" href="/edit/<%= book.id %>"><button>Edit</button></a>
            
                <form action = "/delete/<%= book.id %>" method = "post">
                    <button type = "submit" class="delete">Delete</button>
                </form>
                    
                
            <% }); %>
         
       

        </ul>
    </div>

</body>
</html>